@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Đăng Nhập</title>
    <style>
        /* Tùy chỉnh CSS để đưa form vào giữa trang và thêm border */
        body {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
        }

        .login-container {
            border: 1px solid #ccc;
            padding: 20px;
            border-radius: 8px;
            width: 300px;
            height:500px;
        }
    </style>
</head>
<body>

    <main aria-labelledby="title" class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 mt-5 login-container">
                <h2 id="title" class="text-center">Đăng Nhập</h2>
                <form method="post" action="@Url.Action("Login", "Home")" class="mt-3">
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="floatingInput" name="username" placeholder="username">
                        <label for="floatingInput">UserName</label>
                    </div>
                    <div class="form-floating">
                        <input type="password" class="form-control" id="floatingPassword" name="password" placeholder="Password">
                        <label for="floatingPassword">Password</label>
                    </div>
                    <div class="row mt-4 mb-3 mx-4" >
                        <div class="col">
                            <button type="submit" class="btn btn-primary btn-block ">Đăng Nhập</button>
                            <button type="button" class="btn btn-danger btn-block" onclick="redirectToHome()"> Cancel</button>
                        </div>
                    </div>
                </form>




                @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                {
                    <div class="alert alert-danger" role="alert">
                        @ViewBag.ErrorMessage
                    </div>
                }

                <script>
                    function redirectToHome() {
                        window.location.href = '/'; // Đường dẫn của trang chủ
                    }
                </script>
            </div>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha2/dist/js/bootstrap.bundle.min.js" integrity="sha384-/LYLb6Ib6VeSrlc0jkJCtAIp7U0kG+1zCNw92rUJF8C3lu5L0lvW1WCPQcL/E3IF" crossorigin="anonymous"></script>
</body>
</html>
